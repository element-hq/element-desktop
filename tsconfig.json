{
    "compilerOptions": {
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2022",
        "sourceMap": false,
        "outDir": "./lib",
        "rootDir": "./src",
        "declaration": true,
        "typeRoots": ["src/@types", "node_modules/@types"],
        "lib": ["es2022", "dom"],
        "types": ["node"],
        "strict": true
    },
    "include": ["./src/**/*.ts"]
}
